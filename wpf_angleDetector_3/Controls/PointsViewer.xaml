<UserControl x:Class="wpf_angleDetector_3.Controls.PointsViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_angleDetector_3.Controls"
             mc:Ignorable="d">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" PanningMode="Both">
            <Canvas x:Name="cnv" MouseWheel="cnv_MouseWheel" Background="White" Grid.IsSharedSizeScope="True">
                <Canvas.RenderTransform>
                    <ScaleTransform x:Name="st"/>
                </Canvas.RenderTransform>
            </Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
